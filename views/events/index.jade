extends ../../layouts/default

block head
    title View Events

block body
    div.row
        div.col-sm-8
            div.page-header
                h1 View Events
            ul.Events
                each event,i in data
                    li
                        div.col-sm-8
                            strong #{event.name}
                            | Posted By #{event.username}
                            p #{event.description}
                        div.col-sm-4
                            a(href='/events/show/#{event._id}',class="btn btn-default") Read More
        div.col-sm-4
            .page-header
                h1 Sidebar
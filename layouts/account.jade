doctype html
html
  head
    block head
      title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/layouts/core.min.css?#{cacheBreaker}')
    link(rel='stylesheet', href='/layouts/style.css?#{cacheBreaker}')
    link(rel='stylesheet', href='/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/assets/mutiselect/multiple-select.css')
    block neck
  body
    div.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          a.navbar-brand(href='/account/')
            img.navbar-logo(src='/media/logo-symbol-64x64.png', alt='Logo')
            span.navbar-brand-label #{projectName}
          button.navbar-toggle.collapsed(data-toggle='collapse', data-target='.my-navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
        div.navbar-collapse.my-navbar-collapse.collapse
          ul.nav.navbar-nav
            li: a(href='/account/') 
              i.fa.fa-home
              |  我的主页
              ul.nav.navbar-nav
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-paper-plane-o
                |   基地阅签&nbsp;
                span.caret
              ul.dropdown-menu
                li: a(href='/account/article/') 
                  i.fa.fa-feed
                  |  所有阅签
                li: a(href='/account/article/unread/') 
                  i.fa.fa-delicious
                  |   我的未完成阅签
                li.divider
                li: a(href='/account/article/add/') 
                  i.fa.fa-plus
                  |   发布阅签
                li: a(href='/account/article/manage/') 
                  i.fa.fa-briefcase
                  |   管理阅签
          ul.nav.navbar-nav
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-yelp
                |   请销假&nbsp;
                span.caret
              ul.dropdown-menu
                li: a(href='/account/leave/') 
                  i.fa.fa-train
                  |   我的请假
                li: a(href='/account/agree/') 
                  i.fa.fa-gavel
                  |   我的审批
                li.divider
                li: a(href='/account/allLeaves/') 
                  i.fa.fa-history
                  |   基地所有请假
          ul.nav.navbar-nav.pull-right
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                i.fa.fa-user
                |   #{user.username}&nbsp;
                span.caret
              ul.dropdown-menu
                li: a(href='/account/') 
                  i.fa.fa-home
                  |   我的主页
                li: a(href='/account/settings/')
                  i.fa.fa-wrench
                  |   设置
                li.divider
                li: a(href='/logout/')
                  i.fa.fa-user
                  |   退出登录

    div.page
      div.container
        != messages()
        block body

    div.footer
      div.container
        div.inner
          span.copyright.pull-right
            |&#169; #{copyrightYear} #{copyrightName}
          ul.links.no-print
            li: a(href='/') 首页
            li: a(href='/logout/') 退出登录
          div.clearfix

    div.ajax-spinner
      img(src='/media/ajax-pulse.gif', alt='Loading')

    //if lte IE 9
      script(src='/layouts/ie-sucks.min.js?#{cacheBreaker}')
    script(src='/layouts/core.min.js?#{cacheBreaker}')

    block feet
